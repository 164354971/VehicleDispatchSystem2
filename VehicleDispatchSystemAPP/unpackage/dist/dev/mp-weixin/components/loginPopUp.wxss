
.login{
	text-align: center;
	padding: 20rpx 0 80rpx;
}
.login .title{
	margin-bottom: 80rpx;
}
.login .title>._span{
	font-size: 32rpx;
	font-weight: 650;
}
.login .button{
	display: inline-block;
	color: aliceblue;
	width: 540rpx;
	height: 80rpx;
	line-height: 80rpx;
	background-color: rgba(0, 0, 255, 0.7);
	border-radius: 80rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 20rpx 40rpx #dce7ff;
}
.login .others{
	display: flex;
	margin: 15rpx 235rpx;
	width: 280rpx;
	margin-bottom: 60rpx;
	justify-content: space-around;
}
.login .others>image{
	display: inline-block;
	width: 66rpx;
	height: 66rpx;
}
.login .footer{
	display: inline-block;
	width: 580rpx;
}
.login .footer .radio{
	display: inline-block;
	width: 26rpx;
	height: 26rpx;
	border-radius: 26rpx;
	border: 2rpx solid #020202;
	margin-right: 10rpx;
}
.login .footer>._span{
	display: inline-block;
	font-size: 22rpx;
}
.login .footer>._span>._span{
	color: #00aaff;
}

