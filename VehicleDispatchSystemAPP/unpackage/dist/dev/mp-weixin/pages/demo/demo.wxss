
.warp{
    display: flex;
    flex-direction: column;
    height: 100vh;
    overflow: hidden;
}
.header{
    height: 44px;
    background-color: red;
    width: 100%;
    display: flex;
}
.body{
    width: 100%; height: 100%;
    background-color: blue;
    flex: 1;
    display: flex;
    flex-shrink: 0;
    flex-grow: 1;
}
.footer{
    width: 100%;
    display: flex;
    background-color: yellow;
}
.box{
    height: 100px;
    width: 50%;
    background-color: green;
}


